#include<stdio.h>
int main(){
int hours,i;
float distance,total=0,avg;
printf("Enter time traveled (1 to 5 hours): ");
scanf("%d",&hours);
if(hours<1||hours>5){
printf("Invalid input. Time must be between 1 and 5 hours.");
return 0;
}
for(i=1;i<=hours;i++){
printf("Enter distance covered in hour %d: ",i);
scanf("%f",&distance);
if(distance<0){
printf("Invalid distance. It cannot be negative.");
return 0;
}
total=total+distance;
}
avg=total/hours;
printf("Average speed of the car = %.2f miles per hour.",avg);
return 0;
}
